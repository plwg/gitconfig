[user]
	name = plwg
	email = 56353330+plwg@users.noreply.github.com

[alias]
	b = branch
	c = commit
	ca = commit -a
	f = fetch
	fp = fetch --prune
	jump = switch
	l = log --oneline --all --graph
	last = log -1 HEAD
	new = switch -c
	p = push --force-with-lease
	pickaxe = log -S
	qs = !git add . && git commit -m \"$(date)\"
	reaxe = log -G
	s = status -s
	st = status
	sync = !git stash --all && git fetch && git reset --hard @{u}
	unstage = restore --staged
[column]
	ui = auto
[branch]
	sort = -committerdate
[tag]
	sort = version:refname
[init]
	defaultBranch = main
[diff]
	algorithm = histogram
	colorMoved = plain
	mnemonicPrefix = true
	renames = true
[push]
	default = simple
	autoSetupRemote = true
	followTags = true
[fetch]
	# prune = true
	# pruneTags = true
	all = true
[help]
	autocorrect = prompt
[commit]
	verbose = true
[rerere]
	enabled = true
	autoupdate = true
[rebase]
	autoSquash = true
	autoStash = true
	updateRefs = true
[core]
	excludesfile = /home/paul/.gitignore
	fsmonitor = true
	untrackedCache = true
[merge]
	conflictstyle = zdiff3
[pull]
	rebase = true
